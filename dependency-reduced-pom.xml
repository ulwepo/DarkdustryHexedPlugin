<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.darkdustry.mindustry</groupId>
  <artifactId>HexedPlugin</artifactId>
  <name>hexed-plugin</name>
  <version>1.0</version>
  <url>https://darkdustry.ml</url>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.4.2</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <transformers>
            <transformer>
              <mainClass>${plugin.mainClass}</mainClass>
            </transformer>
          </transformers>
        </configuration>
      </plugin>
      <plugin>
        <groupId>com.hubspot.maven.plugins</groupId>
        <artifactId>prettier-maven-plugin</artifactId>
        <version>0.14</version>
        <executions>
          <execution>
            <phase>validate</phase>
            <goals>
              <goal>${plugin.prettier.goal}</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <prettierJavaVersion>1.3.0</prettierJavaVersion>
          <printWidth>90</printWidth>
          <tabWidth>2</tabWidth>
          <useTabs>true</useTabs>
          <ignoreConfigFile>true</ignoreConfigFile>
          <ignoreEditorConfig>true</ignoreEditorConfig>
          <inputGlobs>
            <inputGlob>src/main/java/**/*.java</inputGlob>
            <inputGlob>src/test/java/**/*.java</inputGlob>
          </inputGlobs>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <version>1.6.0</version>
        <executions>
          <execution>
            <id>BootStrap</id>
            <phase>initialize</phase>
            <goals>
              <goal>exec</goal>
            </goals>
            <configuration>
              <executable>node</executable>
              <arguments>
                <argument>scripts/bootstrap.js</argument>
                <argument>${plugin.name}</argument>
                <argument>${plugin.description}</argument>
                <argument>${plugin.author}</argument>
                <argument>${plugin.mainClass}</argument>
                <argument>${project.version}</argument>
                <argument>${dependencies.versions.mindustry}</argument>
              </arguments>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>travis</id>
      <properties>
        <plugin.prettier.goal>check</plugin.prettier.goal>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>jitpack.io</id>
      <url>https://jitpack.io</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>com.github.Anuken.Mindustry</groupId>
      <artifactId>core</artifactId>
      <version>133</version>
      <scope>provided</scope>
      <exclusions>
        <exclusion>
          <artifactId>lz4-java</artifactId>
          <groupId>org.lz4</groupId>
        </exclusion>
        <exclusion>
          <artifactId>arc-core</artifactId>
          <groupId>com.github.Anuken.Arc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>flabel</artifactId>
          <groupId>com.github.Anuken.Arc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>freetype</artifactId>
          <groupId>com.github.Anuken.Arc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>g3d</artifactId>
          <groupId>com.github.Anuken.Arc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>fx</artifactId>
          <groupId>com.github.Anuken.Arc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>arcnet</artifactId>
          <groupId>com.github.Anuken.Arc</groupId>
        </exclusion>
        <exclusion>
          <artifactId>rhino</artifactId>
          <groupId>com.github.Anuken</groupId>
        </exclusion>
      </exclusions>
    </dependency>
    <dependency>
      <groupId>org.darkdustry</groupId>
      <artifactId>tools</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${project.basedir}/libs/tools-1.0.jar</systemPath>
    </dependency>
  </dependencies>
  <properties>
    <plugin.mainClass>org.darkdustry.mindustry.hexed.Main</plugin.mainClass>
    <maven.compiler.target>17</maven.compiler.target>
    <plugin.author>Darkdustry</plugin.author>
    <dependencies.versions.mindustry>133</dependencies.versions.mindustry>
    <plugin.description>A special gamemode</plugin.description>
    <maven.compiler.source>17</maven.compiler.source>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <plugin.prettier.goal>write</plugin.prettier.goal>
    <plugin.name>${project.artifactId}</plugin.name>
  </properties>
</project>

